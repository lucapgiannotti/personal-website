---
interface Props {
	title?: string;
	description?: string;
}

const { title = 'Luca Giannotti - Portfolio', description = 'Personal website and portfolio' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style is:global>
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				line-height: 1.6;
				color: #333;
				background: #fff;
			}

			h1, h2, h3, h4, h5, h6 {
				line-height: 1.2;
				margin-bottom: 1rem;
			}

			a {
				color: #646cff;
				text-decoration: none;
				transition: color 0.3s ease;
			}

			a:hover {
				color: #535bf2;
			}

			button {
				cursor: pointer;
				border: none;
				outline: none;
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
